<% provide(:title, 'Sign up') %>
<h1>ユーザーの新規登録</h1>

<div class= "row">
  <div class="col-md-6 col-md-offset-3">
    <p>＊のついた項目は入力必須です</p>
    <%= form_with(model: @user, local: true) do |f| %>
     <%= render 'shared/error_messages' %>
     
     <%= f.label :name, "名前＊" %>
     <%= f.text_field :name, class: 'form-control' %>
     
     <%= f.label :user_name, "ユーザーネーム＊"  %>
     <%= f.text_field :user_name, class: 'form-control' %>
     
     <%= f.label :email, "メールアドレス＊" %>
     <%= f.email_field :email, class: 'form-control' %>
     
     <%= f.label :password, "パスワード＊" %>
     <%= f.password_field :password, class: 'form-control' %>
     
     <%= f.label :password_confirmation, "パスワード確認用＊" %>
     <%= f.password_field :password_confirmation, class: 'form-control' %>
     
     <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
     <%= f.text_field :phone_number, class: 'form-control' %>
     
     <%= f.label :profile, "自己紹介文" %>
     <%= f.text_area :profile, class: 'form-control' %>
     
     <%= f.label :gender, "性別" %><br>
     男性<%= f.radio_button :gender, "男", class: 'form-control' %>
     女性<%= f.radio_button :gender, "女", class: 'form-control' %>
     
     <%= f.label :website, "Webサイト" %>
     <%= f.text_field :website, class: 'form-control' %>
     
     <%= f.submit "アカウントを作成する", class: "btn btn-primary" %>
     
    <% end %>
  </div>
</div>